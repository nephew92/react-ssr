{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "target": "es6",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@Build/*": ["build/*"],
      "@Server/*": ["server/*"],
      "@Components/*": ["src/components/*"],
      "@Blocks": ["src/blocks"],
      "@Blocks/*": ["src/blocks/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Utils/*": ["src/utils/*"]
    }
  }
}
